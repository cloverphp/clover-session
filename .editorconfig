# top-most EditorConfig file
root = true

# Default settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# PHP files
[*.php]
indent_size = 4

# JSON, YAML, YML use 2 spaces
[*.{json,yml,yaml}]
indent_size = 2

# Markdown – don’t trim whitespace
[*.md]
trim_trailing_whitespace = false
